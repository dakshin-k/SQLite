<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textSize="17sp"
           android:layout_height="120dp"
           android:text="Seed Rate"
           android:backgroundTint="#be935b"
           android:onClick="displayAllCrops"/>
       <Button
           android:textSize="17sp"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:backgroundTint="#70be5b"
           android:layout_height="120dp"
           android:text="Display Crops"
           android:onClick="cropsInDistricts"/>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:backgroundTint="#be935b"
            android:textSize="17sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:text="Display districts"
            android:onClick="displayAllDistricts"/>

    <Button
        android:backgroundTint="#be935b"
        android:textSize="17sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:text="Soil Type"
        android:onClick="soilType"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:backgroundTint="#be935b"
        android:textSize="17sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:text="Fertilizers and disease"
        android:onClick="fertilizerAndDisease"/>
    <Button
        android:textSize="17sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:backgroundTint="#be935b"
        android:text="Season for Crops"
        android:onClick="SeasonForCrops"/>
    </LinearLayout>
</LinearLayout>